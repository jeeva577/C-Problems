
// x-number pattern
#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i==j){
                printf("%d", i+1);
            }else if(i+j==n-1){
                printf("%d ", j+1);
            }else{
                printf("  ");
            }
        }
        printf("\n");
    }
}

// Box pattern
int main()
{
    int n;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i==0||i==n-1||j==0||j==n-1){
                printf("*");
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
        
    }
}
